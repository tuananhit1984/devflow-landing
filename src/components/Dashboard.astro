---
const features = [
    {
        title: 'Real-time Metrics',
        description: 'Monitor latency, error rates, and throughput in real-time.',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>`
    },
    {
        title: 'Request Explorer',
        description: 'Debug API calls with detailed logs and request tracing.',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>`
    },
    {
        title: 'Team Collaboration',
        description: 'Manage permissions and collaborate with your entire team.',
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>`
    }
];
---

<section class="py-24 bg-gray-50">
    <div class="mx-auto px-4 max-w-7xl">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Powerful dashboard for API management</h2>
            <p class="text-xl text-gray-600">
                Monitor, debug, and optimize your APIs with our intuitive dashboard.
            </p>
        </div>

<section class="py-24 bg-gray-50">
    <div class="mx-auto px-4 max-w-7xl">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Powerful dashboard for API management</h2>
            <p class="text-xl text-gray-600">
                Monitor, debug, and optimize your APIs with our intuitive dashboard.
            </p>
        </div>

        <div class="relative">            <!-- Dashboard Preview Image -->
            <div class="rounded-lg overflow-hidden shadow-xl bg-white max-w-4xl mx-auto">
                <div class="relative bg-[#F3F4F6] p-6">
                    <!-- Three cards for metrics -->
                    <div class="grid grid-cols-3 gap-6 mb-8">
                        <div class="bg-white rounded-lg p-4 shadow-sm">
                            <h4 class="text-sm font-medium text-gray-500 mb-2">Total Requests</h4>
                            <p class="text-2xl font-semibold text-gray-900">2.4M</p>
                            <div class="flex items-center mt-2 text-sm text-green-600">
                                <svg class="w-4 h-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
                                </svg>
                                <span>+12.5%</span>
                            </div>
                        </div>
                        <div class="bg-white rounded-lg p-4 shadow-sm">
                            <h4 class="text-sm font-medium text-gray-500 mb-2">Response Time</h4>
                            <p class="text-2xl font-semibold text-gray-900">85ms</p>
                            <div class="flex items-center mt-2 text-sm text-green-600">
                                <svg class="w-4 h-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
                                </svg>
                                <span>-5.2%</span>
                            </div>
                        </div>
                        <div class="bg-white rounded-lg p-4 shadow-sm">
                            <h4 class="text-sm font-medium text-gray-500 mb-2">Error Rate</h4>
                            <p class="text-2xl font-semibold text-gray-900">0.12%</p>
                            <div class="flex items-center mt-2 text-sm text-red-600">
                                <svg class="w-4 h-4 mr-1 transform rotate-180" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd"/>
                                </svg>
                                <span>+0.03%</span>
                            </div>
                        </div>
                    </div>

                    <!-- Request Timeline Chart -->
                    <div class="bg-white rounded-lg p-4 shadow-sm">
                        <div class="flex justify-between items-center mb-4">
                            <h4 class="text-sm font-medium text-gray-700">Request Timeline</h4>
                            <div class="flex space-x-2">
                                <button class="px-3 py-1 text-xs font-medium bg-primary text-white rounded-full">24h</button>
                                <button class="px-3 py-1 text-xs font-medium text-gray-600 hover:text-primary rounded-full">7d</button>
                                <button class="px-3 py-1 text-xs font-medium text-gray-600 hover:text-primary rounded-full">30d</button>
                            </div>
                        </div>
                        <div class="h-48 bg-gradient-to-b from-primary/5 to-transparent rounded relative">
                            <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-primary/10"></div>
                            <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-primary/5 via-primary/3 to-transparent"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Feature Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
                {features.map(feature => (
                    <div class="bg-white p-6 rounded-lg shadow-sm">
                        <div class="text-primary mb-4">
                            <div set:html={feature.icon} />
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
                        <p class="text-gray-600">{feature.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
