<nav class="fixed w-full bg-transparent z-50">
    <div class="mx-auto px-4 max-w-7xl">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-3">
                <span class="text-2xl font-bold text-white">DevFlow</span>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-8">
                <a href="/features" class="text-gray-200 hover:text-white transition-colors duration-200">Features</a>
                <a href="/pricing" class="text-gray-200 hover:text-white transition-colors duration-200">Pricing</a>
                <a href="/docs" class="text-gray-200 hover:text-white transition-colors duration-200">Documentation</a>
                <a href="/blog" class="text-gray-200 hover:text-white transition-colors duration-200">Blog</a>
            </div>

            <!-- Auth Buttons -->
            <div class="hidden md:flex items-center space-x-4">
                <a href="/login" class="text-gray-200 hover:text-white transition-colors duration-200">Log in</a>
                <a href="/signup" class="bg-white text-[#7C3AED] px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors duration-200">
                    Sign up
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button class="md:hidden text-white" id="mobile-menu-button">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/features" class="block text-gray-200 hover:text-white py-2">Features</a>
                <a href="/pricing" class="block text-gray-200 hover:text-white py-2">Pricing</a>
                <a href="/docs" class="block text-gray-200 hover:text-white py-2">Documentation</a>
                <a href="/blog" class="block text-gray-200 hover:text-white py-2">Blog</a>
                <a href="/login" class="block text-gray-200 hover:text-white py-2">Log in</a>
                <a href="/signup" class="block text-gray-200 hover:text-white py-2">Sign up</a>
            </div>
        </div>
    </div>
</nav>

<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    }
</script>